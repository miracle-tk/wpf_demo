<Window x:Class="MouseDrag.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseDrag"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tb1" AllowDrop="True" DragLeave="Tb1_DragLeave"></TextBox>
            <TextBox x:Name="tb2"></TextBox>
            <Label Background="Red"  x:Name="label1" AllowDrop="True" DragLeave="Label1_DragLeave" Drop="Label1_Drop" MouseDown="Label1_MouseDown" DragOver="Label1_DragOver">label</Label>
            <ListBox></ListBox>
        </StackPanel>
        
    </Grid>
</Window>
