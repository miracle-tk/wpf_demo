<Window x:Class="自制控件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:自制控件"
        xmlns:converter="clr-namespace:自制控件.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converter:TextBoxFloatConverter x:Key="floatCOnverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            
        <Slider Width="500" Name="slider"  VerticalAlignment="Top" Minimum="0" Maximum="100" HorizontalAlignment="Left"  />
            <TextBox Text="{Binding Value,ElementName=slider,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource floatCOnverter}}"/>
        </StackPanel>
        <local:Instrument Grid.Row="1" Value="{Binding Value,ElementName=slider}"/>
    </Grid>
</Window>
