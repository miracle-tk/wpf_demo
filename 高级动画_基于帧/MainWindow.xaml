<Window x:Class="高级动画_基于帧.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:高级动画_基于帧"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0" Click="Button_Click"></Button>
            <Button Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </StackPanel>
        <Canvas Name="canvas" Grid.Row="1" Background="Gray">
                    </Canvas>
    </Grid>
</Window>
